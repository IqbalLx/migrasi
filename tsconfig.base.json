{
  "compileOnSave": false,
  "compilerOptions": {
    "strict": true,
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "ESNext",
    "module": "esnext",
    "lib": ["ESNext", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@migrasi/services/api/auth": ["packages/services/api/auth/src/index.ts"],
      "@migrasi/services/api/project": [
        "packages/services/api/project/src/index.ts"
      ],
      "@migrasi/services/api/user": ["packages/services/api/user/src/index.ts"],
      "@migrasi/services/cli/login": [
        "packages/services/cli/login/src/index.ts"
      ],
      "@migrasi/services/cli/setup": [
        "packages/services/cli/setup/src/index.ts"
      ],
      "@migrasi/shared/bridges/email": [
        "packages/shared/bridges/email/src/index.ts"
      ],
      "@migrasi/shared/config": ["packages/shared/config/index.ts"],
      "@migrasi/shared/database": ["packages/shared/database/index.ts"],
      "@migrasi/shared/entities": ["packages/shared/entities/index.ts"],
      "@migrasi/shared/errors": ["packages/shared/errors/index.ts"],
      "@migrasi/shared/trpc/*": ["packages/shared/trpc/src/*"],
      "@migrasi/shared/utils": ["packages/shared/utils/src/index.ts"],
      "@migrasi/third-parties/email": ["packages/third-parties/email/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp", "dist"]
}
